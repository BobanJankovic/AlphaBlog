<h1>Create new category</h1>

<%= render "shared/errors", obj:@category %>
<%= form_for @category, :html => { id:"form-new"}  do |f| %>
  <div class="form-group  ">
    <div class="row">
      <div class="col-sm-2">
        <%= f.label :name,class:" col-form-label" %>
      </div>
      <div class="col-sm-10 ">
        <%= f.text_field :name,class:"form-control", placeholder:"Name of category" %>
      </div>
    </div>
  </div>
  
  <div class="form-group ">
    <div class="col-sm-10 offset-sm-5">
      <%= f.submit class:"btn btn-primary btn-lg"  %>
    </div>
  </div>
<% end %>
<div class="link">
  [<%=  link_to "Back to articles listing", articles_path%> ]
</div>