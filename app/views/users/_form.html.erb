<%= render "shared/errors", obj:@user %>
  <%= form_for @user, :html => { id:"form-new"}  do |f| %>
    <div class="form-group  ">
      <div class="row">
        <div class="col-sm-2">
          <%= f.label :username,class:" col-form-label" %>
        </div>
        <div class="col-sm-10 ">
          <%= f.text_field :username,class:"form-control", placeholder:"Title of username" %>
        </div>
      </div>
    </div>
    <div class="form-group  ">
      <div class="row">
        <div class="col-sm-2">
          <%= f.label :email,class:" col-form-label" %>
        </div>
        <div class="col-sm-10 ">
          <%= f.email_field :email, class:"form-control", placeholder:"Body of email" %>
        </div>
      </div>
    </div>
    <div class="form-group  ">
      <div class="row">
        <div class="col-sm-2">
          <%= f.label :password,class:" col-form-label" %>
        </div>
        <div class="col-sm-10 ">
          <%= f.password_field :password, class:"form-control", placeholder:"Body of password" %>
        </div>
      </div>
    </div>
    <div class="form-group ">
      <div class="col-sm-10 offset-sm-5">
        <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class:"btn btn-primary btn-lg" )%>
      </div>
    </div>
<% end %>
<div class="link">
  [<%=  link_to "Back to articles listing", articles_path%> ]
</div>