<%= render "shared/errors", obj:@article %>
<%= form_for @article, :html => { id:"form-new"}  do |f| %>
  <div class="form-group  ">
    <div class="row">
      <div class="col-sm-2">
        <%= f.label :title,class:" col-form-label" %>
      </div>
      <div class="col-sm-10 ">
        <%= f.text_field :title,class:"form-control", placeholder:"Title of article" %>
      </div>
    </div>
  </div>
  <div class="form-group  ">
    <div class="row">
      <div class="col-sm-2">
        <%= f.label :description,class:" col-form-label" %>
      </div>
      <div class="col-sm-10 ">
        <%= f.text_area :description, class:"form-control", placeholder:"Body of description" %>
      </div>
    </div>
  </div>
  <div class="form-group ">
      <div class="col-sm-10 offset-sm-2 lab ">
        <%= form_for @article do |f| %>
        <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
        <div class="form-group "><br/><br/>
          <div class="col-sm-4 offset-sm-4">
          <%= f.submit class:"btn btn-primary btn-lg"  %>
        </div>
      </div>
      <% end %>
    </div>
  </div><br/>
  
<% end %>
