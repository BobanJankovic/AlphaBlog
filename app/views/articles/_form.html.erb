

<% if @article.errors.any? %>
  <div class="row">
  <div class="col-sm-12">
    <div class="card bg-danger">
      <div class="card-body">
        <h2 class="card-title"><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>
        <p class="card-text"><ul>
            <% @article.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
        </ul></p>
        
      </div>
    </div>
  </div>
  </div>  
  <% end %>
 




<%= form_for @article, :html => { id:"form-new"}  do |f| %>
  <div class="form-group  ">
  <div class="row">
  <div class="col-sm-2">
    <%= f.label :title,class:" col-form-label" %>
    </div>
    <div class="col-sm-10 ">
      
      <%= f.text_field :title,class:"form-control", placeholder:"Title of article" %>
    </div>

    </div>
    
    
  </div>
  <div class="form-group  ">
  <div class="row">
  <div class="col-sm-2">
    <%= f.label :description,class:" col-form-label" %>
    </div>
    <div class="col-sm-10 ">
      <%= f.text_area :description, class:"form-control", placeholder:"Body of description" %>
    </div>
     </div>
  </div>
  
  
  <div class="form-group ">
    <div class="col-sm-10 offset-sm-5">
      <%= f.submit class:"btn btn-primary btn-lg"  %>
    </div>
  </div>
<% end %>

